  "scripts": {
    "start": "vite build --mode=development --watch --minify=false",
    "build:dev": "vite build --mode=development && npm run generate-semantics && npm run generate-library",
    "build": "tsc && vite build && npm run generate-semantics && npm run generate-library",
    "format:check": "prettier . --check",
    "format:fix": "prettier . --write",
    "eslint:check": "eslint .",
    "eslint:fix": "eslint . --fix",
    "lint": "npm run format:check && npm run eslint:check",
    "lint:fix": "npm run format:fix && npm run eslint:fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "storybook": "start-storybook -p 6006 -h localhost",
    "build-storybook": "build-storybook",
    "generate-semantics": "h5p-generate-configs s --type-definition ./src/semantics.ts --out ./semantics.json --translations ./src/types/TranslationKey.ts",
    "//watch-semantics": "nodemon ./src/**/* --exec 'npm run generate-semantics'",
    "generate-library": "h5p-generate-configs l --type-definition ./src/library.ts --out ./library.json",
    "//watch-library": "nodemon ./src/**/* --exec 'npm run generate-library'",
    "typecheck": "tsc"
  },
  "dependencies": {
    "h5p-utils": "^2.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "swiper": "^8.2.4",
    "use-h5p": "^1.0.0"
  },
  "devDependencies": {
    "@mdx-js/react": "^2.1.2",
    "@storybook/addon-essentials": "^6.5.9",
    "@storybook/addon-links": "^6.5.9",
    "@storybook/builder-vite": "^0.1.36",
    "@storybook/react": "^6.5.9",
    "@testing-library/react": "^13.3.0",
    "@types/jquery": "^3.5.14",
    "@types/react": "^18.0.14",
    "@types/react-dom": "^18.0.5",
    "@vitejs/plugin-react": "^1.3.2",
    "esbuild": "^0.14.43",
    "h5p-generate-configs": "^0.3.0",
    "h5p-types": "^0.1.0",
    "happy-dom": "^5.3.1",
    "sass": "^1.53.0",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.4",
    "vite": "^2.9.12",
    "vitest": "^0.15.2"
  }
}
